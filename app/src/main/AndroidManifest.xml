<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.microsoft.office365.msgraphsnippetapp" >

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".application.SnippetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SignInActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SnippetListActivity" />
        <activity
            android:name=".SnippetDetailActivity"
            android:label="@string/title_activity_snippet_detail" />
        <activity
            android:name="com.microsoft.o365_android_microsoft_graph_snippets.ListBirthdayActivity"
            android:label="@string/title_activity_list_birthday" >
        </activity>
    </application>

</manifest>
